<form id="expense_form">
  <div class="list-block">
      <ul>
        <li class="item-content">
          <div class="item-inner">
            <div class="item-title">转审人 *</div>
            <div class="item-after"></div>
          </div>
        </li>
        <div class="approve-content content-padded" id="reassign">
        {{#if data.approvers}}
          {{#each data.approvers}}
            {{> approver_item}}
          {{/each}}
        {{/if}}
          {{#if data.approve_admin}}
          <div class="approve-add">
            <div class="approve-add-button">
              <span class="icon-add icon">+</span>
            </div>
          </div>
          {{/if}}
        </div>
      </ul>
  </div>

  <div class="list-block">
      <ul>
          <li class="align-top">
            <div class="item-content">
              <div class="item-inner">
                <div class="item-input">
                  <textarea name="opinion" maxlength="300" placeholder="填写意见" data-validation="required" data-validation-message="转审意见不能为空"></textarea>
                </div>
              </div>
            </div>
        </li>
      </ul>
  </div>
  <div class="content-block">
    <p><a href="#" class="button button-big button-fill" id="page-submit">提交</a></p>
  </div>
</form> 
<div id="templates_approver_item" style="display:none">
  {{> approver_item}}  
</div>
<script type="text/javascript">
  var approve_admin;
  {{#if data.approve_admin}}
      approve_admin = {{ data.approve_admin }};
  {{/if}}
</script>


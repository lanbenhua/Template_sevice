<div>
	<div class="block-container">
		<div class="block-header block-header-split">
			<div class="block-header-avatar">
				<img width="40" height="40" src="{{data.avatar}}">
			</div>
			<div class="block-header-main">
				<h2 class="block-header-title">{{data.displayName}}提交了报销审批</h2>
				<span class="block-header-label label-red">{{data.state}}</span>
			</div>
		</div>
		<div class="block-content">
			<ul class="block-list">
				<li class="block-item">
					<label class="list-label">类型：</label><div class="list-info">{{data.content.exptype}}</div>
				</li>
				<li class="block-item">
					<label class="list-label">金额：</label><div class="list-info">{{data.content.amount}}</div>
				</li>
				<li class="block-item">
					<label class="list-label">事由：</label><div class="list-info">{{data.content.reason}}</div>
				</li>
			</ul>
		</div>
	</div>

	{{#each data.content.items}}
		{{> expItem}}
	{{/each}}

	<div class="block-container">
		<div class="block-header">
			<div class="block-header-main">
				<h2 class="block-header-title">收款人信息</h2>
			</div>
		</div>
		<div class="block-content">
			<ul class="block-list">
				<li class="block-item">
					<label class="list-label">收款单位/人：</label><div id="receiver" class="list-info">{{data.content.payee.receiver}}</div>
				</li>
				<li class="block-item">
					<label class="list-label">收款银行：</label><div id="bankName" class="list-info">{{data.content.payee.bankName}}</div>
				</li>
				<li class="block-item">
					<label class="list-label">收款账号：</label><div id="bankAccount" class="list-info">{{data.content.payee.bankAccount}}</div>
				</li>
				<li class="block-item">
					<label class="list-label">是否为增值税专用发票：</label><div id="isVAT" class="list-info">{{data.content.payee.isVAT}}</div>
				</li>
				<li class="block-item">
					<label class="list-label">纳税识别号：</label><div id="taxpayerId" class="list-info">{{data.content.payee.taxpayerId}}</div>
				</li>

			</ul>
		</div>	
	</div>

	<div class="block-container">
		<div class="block-header">
			<div class="block-header-main">
				<h2 class="block-header-title">审批流程</h2>
			</div>
		</div>
		<div class="block-content">
			<div class="process-container">
			
				{{#each data.approvers}}
					{{> approve_process}}
				{{/each}}

			</div>
		</div>	
		<div class="block-footer">
			<span>审批完成</span>
		</div>
	</div>
</div>
